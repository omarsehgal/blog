<h2>Listing all posts in the DB</h2>

<table border=1 cellpadding=4 cellspacing=0>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th># of comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.name, post %></td>
  	<td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.comments.count %></td>
    <td><%= link_to 'Details', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Delete', post, :confirm => 'Sure you wanna delete this post?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Click here to add a new post', new_post_path %>
